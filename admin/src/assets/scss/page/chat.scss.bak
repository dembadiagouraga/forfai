@import '../../variables';

.chat-box {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  padding: 0 1rem;

  .chat-date {
    position: relative;
    text-align: center;
    margin: 1rem 0;
    z-index: 1;

    &::after {
      content: attr(data-text);
      position: relative;
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: var(--grey);
      border-radius: 0.5rem;
      color: var(--primary-text);
      z-index: 2;
    }

    &::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      width: 100%;
      height: 1px;
      background: var(--border-color);
      z-index: 0;
    }
  }

  .sms-box {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;

    .admin-message,
    .user-message {
      position: relative;
      padding: 0.75rem;
      border-radius: 0.5rem;
      max-width: 80%;
      width: fit-content;
      color: var(--primary-text);

      .text {
        word-break: break-word;
      }

      .time {
        position: absolute;
        bottom: 0.25rem;
        right: 0.75rem;
        font-size: 0.75rem;
        color: var(--muted-text);
      }

      &.chat-image {
        padding: 0 !important;
        overflow: hidden;

        .cs-message__content {
          padding: 0 !important;
        }
      }

      &.chat-voice {
        padding: 8px !important;

        .voice-message-bubble {
          width: 100%;
          max-width: 250px;
          
          &__play-button {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.1);
            border: none;
            cursor: pointer;
            color: inherit;
            margin-right: 8px;
            
            &:hover {
              opacity: 0.8;
            }
            
            &:focus {
              outline: none;
            }
          }
          
          &__waveform {
            flex: 1;
            margin: 0 8px;
          }
          
          &__duration {
            font-size: 12px;
            margin-left: 8px;
            white-space: nowrap;
          }
        }
      }
    }

    .admin-message {
      align-self: flex-end;
      background: var(--primary);
      color: var(--white);

      .time {
        color: rgba($color: #fff, $alpha: 0.7);
      }

      .double-check {
        position: absolute;
        bottom: 0.25rem;
        right: 0.25rem;
        color: rgba($color: #fff, $alpha: 0.7);
      }
    }

    .user-message {
      align-self: flex-start;
      background: var(--grey);
    }
  }
}

.admin-message-wrapper {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

.user-sms-wrapper {
  display: flex;
  justify-content: flex-start;
  width: 100%;
}

.chat-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;

  .chat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--border-color);

    .user-info {
      display: flex;
      align-items: center;
      gap: 0.5rem;

      .user-avatar {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        overflow: hidden;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      .user-name {
        font-weight: 500;
        color: var(--primary-text);
      }
    }

    .chat-actions {
      display: flex;
      align-items: center;
      gap: 0.5rem;

      .action-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        background: transparent;
        border: none;
        cursor: pointer;
        color: var(--primary-text);

        &:hover {
          background: rgba($color: #000, $alpha: 0.05);
        }
      }
    }
  }

  .chat-body {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }

  .chat-footer {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-top: 1px solid var(--border-color);

    .send-btn {
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 50%;
      width: 37px;
      height: 37px;
      background: #45a524;
    }

    @media (max-width: 768px) {
      width: 100%;
    }
  }
}

.chat-container {
  border: 1px solid var(--border-color);

  * {
    font-family: 'Inter', sans-serif !important;
  }

  .chat-sidebar {
    border-color: var(--border-color) !important;
  }

  .chat-container {
    border-color: var(--border-color) !important;

    .chat-header {
      border-color: var(--border-color) !important;
      background-color: var(--grey);

      .cs-conversation-header__user-name {
        background-color: var(--grey);
      }
    }

    .custom-message-input-container {
      display: flex;
      align-items: center;
      width: 100%;
      border-top: 1px solid var(--border-color);
      
      .chat-input {
        flex: 1;
        border: none;
        border-radius: 0;
        
        .cs-message-input__content-editor-wrapper {
          padding-right: 40px;
          position: relative;
          background-color: var(--menubg);
          
          div {
            background-color: var(--menubg);
          }
          
          .cs-message-input__content-editor {
            padding-right: 40px !important;
          }
        }
        
        .cs-button--send {
          position: absolute;
          right: 10px;
          top: 50%;
          transform: translateY(-50%);
          z-index: 2;
        }
      }
      
      .cs-button {
        color: var(--primary);
      }
      
      .voice-record-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        min-width: 36px;
        border-radius: 50%;
        background-color: var(--primary);
        border: none;
        cursor: pointer;
        color: white;
        transition: all 0.2s ease;
        margin: 8px;
        
        &:hover {
          background-color: darken(#4a76a8, 10%);
          transform: scale(1.05);
        }
        
        &:focus {
          outline: none;
        }
        
        svg {
          font-size: 16px;
        }
      }
    }
  }
}


.more-btn {
  color: var(--primary);
  cursor: pointer;
}

[data-theme='dark'] .chat-container {
  background-color: var(--dark-background);
  border-color: var(--dark-grey) !important;

  .cs-sidebar--left {
    background-color: var(--dark-background);
  }

  .cs-conversation-list,
  .cs-conversation,
  .cs-conversation__name {
    color: var(--light-text);
    background-color: transparent !important;
  }

  .cs-conversation__info {
    color: var(--dark-muted-text);
  }

  .cs-conversation:hover {
    background-color: var(--dark-primary-hover);
  }

  .cs-message-list {
    background-color: var(--dark-background);
    color: var(--light-text);
  }

  .chat-sidebar {
    border-color: var(--dark-grey) !important;
  }

  .chat-header {
    background-color: var(--dark-background);
    border-color: var(--dark-grey) !important;

    .cs-conversation-header__user-name {
      background-color: transparent;
      color: var(--light-text);
    }
  }

  .custom-message-input-container {
    border-color: var(--dark-grey) !important;
    
    .chat-input {
      border-color: transparent !important;
    }
    
    .voice-record-btn {
      background-color: var(--primary);
      
      &:hover {
        background-color: darken(#4a76a8, 15%);
      }
    }
  }

  .cs-message-input {
    background-color: var(--dark-background);
    color: var(--light-text);
  }

  .cs-message-input__content-editor-wrapper {
    background-color: rgb(40, 49, 66) !important;
    border: 1px solid var(--dark-grey);
  }

  .cs-message-input__content-editor-wrapper div {
    background-color: rgb(40, 49, 66) !important;
  }

  .cs-message-input__content-editor {
    color: var(--dark-text-muted);
  }

  .cs-message-input__content-editor[data-placeholder]:empty:before {
    color: var(--light-text);
  }

  .cs-button--send {
    color: var(--light-text);
    
    &:hover {
      color: rgba(255, 255, 255, 0.8);
    }
  }

  .chat-box .sms-box .admin-message,
  .chat-box .sms-box .user-message {
    background: var(--dark-primary-hover);
    color: var(--light-text);

    .time {
      color: var(--dark-muted-text);
    }

    &.chat-voice {
      .voice-message-bubble {
        color: var(--light-text);

        &__play-button {
          color: var(--light-text);
          background-color: rgba(255, 255, 255, 0.1);
        }
        
        &__progress-bar {
          background-color: rgba(255, 255, 255, 0.15);
        }
        
        &__duration {
          color: rgba(255, 255, 255, 0.7);
        }
      }
    }
  }

  .chat-box .chat-date {
    background: var(--dark-grey);

    &::after {
      background: var(--dark-grey);
      color: var(--light-text);
    }
  }
}

.cs-message__content {
  background: transparent !important;
  padding: 0 !important;
  .cs-message__image-content {
    padding: 15px !important;
  }
}

.message-actions {
  &-wrapper {
    background-color: var(--white);
    position: sticky;
    display: flex;
    bottom: 0;
    padding-left: 1rem;
    box-shadow: 0 10px 0 0 var(--background);
    -webkit-box-shadow: 0 10px 0 0 var(--background);
    -moz-box-shadow: 0 10px 0 0 var(--background);

    &::before {
      content: "";
      position: absolute;
      display: block;
      background: var(--primary);
      height: 100%;
      width: 2px;
      left: 0;
    }
  }

  &__content {
    flex-grow: 1;
    width: 90%;
  }

  &__type {
    font-size: 13px;
    text-transform: capitalize;
  }

  &__message {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 0;
  }

  &__close-btn {
    background: transparent;
    border: none;
    outline: none;
    cursor: pointer;
  }

  &__image {
    max-width: 90%;
    height: 4rem;
    display: block;
  }
}

[data-theme='dark'] .message-actions {
  &-wrapper {
    background-color: var(--dark-background);
    color: var(--light-text);
    box-shadow: 0 10px 0 0 var(--dark-background);
    -webkit-box-shadow: 0 10px 0 0 var(--dark-background);
    -moz-box-shadow: 0 10px 0 0 var(--dark-background);
  }
}

.reply-message {
  position: relative;
  padding-left: .5rem;
  margin-bottom: .5rem;

  &::after {
    content: "";
    display: block;
    position: absolute;
    height: 100%;
    width: 2px;
    background: var(--primary);
    top: 0;
    left: 0;
  }

  &__text {
    font-size: 12px;
    line-height: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &__image {
    display: block;
    max-height: 3rem;
    max-width: 100%;
  }
}

.upload-form {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;

  img {
    width: 100%;
    max-height: 270px;
    object-fit: contain;
  }

  textarea {
    margin-top: 20px;
  }

  .footer-btns {
    padding-top: 20px;
    width: 100%;
    gap: 8px;
    display: flex;
    justify-content: flex-end;

    // button {
    //   // background: transparent;
    //   // color: var(--grey);
    //   // border: none;

    //   &:hover {
    //     background: rgba($color: #000, $alpha: 0.1);
    //   }
    // }
  }
}

// Voice Recording Modal Styles
.voice-recording-modal {
  .ant-modal-body {
    padding: 16px;
  }

  &__content {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 200px;
  }

  .voice-recorder {
    width: 100%;

    &__recording {
      display: flex;
      flex-direction: column;
      width: 100%;
      padding: 16px;
      border-radius: 8px;
      background-color: var(--grey);
    }

    &__timer {
      font-size: 24px;
      font-weight: 500;
      margin-bottom: 16px;
      text-align: center;
      color: var(--primary-text);
    }

    &__waveform {
      width: 100%;
      margin-bottom: 16px;
    }

    &__controls {
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    &__control-button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
      border-radius: 50%;
      border: none;
      cursor: pointer;

      &:focus {
        outline: none;
      }

      &--cancel {
        background-color: #f44336;
        color: #fff;

        &:hover {
          opacity: 0.9;
        }
      }

      &--pause, &--resume {
        background-color: var(--primary);
        color: #fff;

        &:hover {
          opacity: 0.9;
        }
      }

      &--stop {
        background-color: #4caf50;
        color: #fff;

        &:hover {
          opacity: 0.9;
        }
      }
    }

    &--whatsapp {
      .voice-recorder__recording {
        flex-direction: row;
        align-items: center;
        padding: 8px 16px;
        background-color: var(--white);
        border: 1px solid var(--border-color);
      }

      .voice-recorder__timer {
        font-size: 16px;
        margin-bottom: 0;
        margin-right: 16px;
        min-width: 48px;
      }

      .voice-recorder__waveform {
        flex: 1;
        margin-bottom: 0;
        margin-right: 16px;
      }

      .voice-recorder__controls {
        justify-content: flex-end;
      }

      .voice-recorder__control-button {
        width: 36px;
        height: 36px;
        margin-left: 8px;
      }
    }
  }
}

// Dark theme support for voice recording modal
[data-theme='dark'] .voice-recording-modal {
  .voice-recorder {
    &__recording {
      background-color: var(--dark-primary-hover);
    }

    &__timer {
      color: var(--light-text);
    }

    &--whatsapp {
      .voice-recorder__recording {
        background-color: var(--dark-background);
        border-color: var(--dark-grey);
      }
    }
  }
}
